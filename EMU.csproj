<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AssemblyName>ExtraMapUtilities</AssemblyName>
		<EnableHarmony>true</EnableHarmony>
		<LangVersion>Latest</LangVersion>
	</PropertyGroup>

	<PropertyGroup>
		<Name>Extra Map Utilities</Name>
		<Authors>tlitookilakin</Authors>
		<Description>Adds many new utilities for map makers</Description>
		<UniqueId>tlitoo.emu</UniqueId>
		<Version>2.0.0</Version>
		<MinimumApiVersion_Behavior>Update</MinimumApiVersion_Behavior>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="i18n\default.json" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Leclair.Stardew.ModManifestBuilder" Version="2.1.0" />
		<PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.1.1" />
		<PackageReference Include="Pathoschild.Stardew.ModTranslationClassBuilder" Version="2.0.1" />
		<ProjectReference Include="..\StardewGenTools\StardewGenTools.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	</ItemGroup>

</Project>
